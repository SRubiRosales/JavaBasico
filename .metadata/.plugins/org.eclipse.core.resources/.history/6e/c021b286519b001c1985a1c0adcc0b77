/**
 * 
 */
package mx.com.gm.peliculas.servicio;

import java.util.List;

import mx.com.gm.peliculas.datos.AccesoDatosImpl;
import mx.com.gm.peliculas.datos.IAccesoDatos;
import mx.com.gm.peliculas.domain.Pelicula;
import mx.com.gm.peliculas.excepciones.AccesoDatosEx;
import mx.com.gm.peliculas.excepciones.LecturaDatosEx;

/**
 * @author srosales
 *
 */
public class CatalogoPeliculasImpl implements ICatalogoPeliculas{
	
	private final IAccesoDatos datos;
	
	CatalogoPeliculasImpl(){
		this.datos = new AccesoDatosImpl();//Especifica el tipo de implementacion de la interface
	}

	@Override
	public void agregarPelicula(String nombrePelicula) {
		Pelicula pelicula = new Pelicula(nombrePelicula);
		boolean anexar = false;
		try {
			anexar = datos.existe(NOMBRE_RECURSO);//Pregunta si existe el recurso
			datos.escribir(pelicula, nombrePelicula, anexar);
		} catch (AccesoDatosEx e) {
			e.printStackTrace();
		}
	}

	@Override
	public void listarPeliculas() {
		try {
			List<Pelicula> peliculas = this.datos.listar(NOMBRE_RECURSO);
			for (Pelicula pelicula : peliculas) {
				System.out.println("Pelicula = " + pelicula);
			}
		} catch (LecturaDatosEx e) {
			e.printStackTrace();
		}
	}

	@Override
	public void buscarPelicula(String buscar) {
		String resultado = null;
		try {
			resultado = datos.buscar(NOMBRE_RECURSO, buscar);
		} catch (AccesoDatosEx e) {
			e.printStackTrace();
		}
		System.out.println("Resultado = " + resultado);
	}

	@Override
	public void iniciarCatalogoPeliculas() {
		try {
			if (this.datos.existe(NOMBRE_RECURSO)) {//Si ya existe lo borra y lo vuelve a crear
				datos.borrar(NOMBRE_RECURSO);
				datos.crear(NOMBRE_RECURSO);
			}
		} catch (AccesoDatosEx e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
